[ignore]
.*/dist/.*
.*/node_modules/.*
.*/.storybook/.*
.*/__tests__/.*
.*/temp/.*
.*/rollup.config.js
.*/examples/.*

[include]
.*/src/.*

[libs]
flow-typed/npm/nano-css_vx.x.x.js
flow-typed/npm/jest_v23.x.x.js
flow-typed/npm/@storybook/react_v4.x.x.js

[lints]

[options]
all=true
module.name_mapper='^src' ->'<PROJECT_ROOT>/src'
module.name_mapper='^components' ->'<PROJECT_ROOT>/src/components'
module.name_mapper='^utils' ->'<PROJECT_ROOT>/src/utils'
module.name_mapper='^kamamana' ->'<PROJECT_ROOT>/dist/index.min'
# https://github.com/facebook/flow/issues/3850
module.ignore_non_literal_requires=true

[strict]
